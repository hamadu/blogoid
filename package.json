{
  "name": "blogoid",
  "version": "0.0.1",
  "description": "Simple markdown blog generator",
  "author": "hamadu (https://hamadu.net/)",
  "license": "MIT",
  "bin": {
    "blogoid": "dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist/*",
    "prepublish": "npm run clean && npm run build && npm run test",
    "pretest": "tsc",
    "test": "nyc mocha ts/test/**/*.spec.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint ts/**/*.ts -e ts/typings/*.d.ts"
  },
  "files": [
    "README.md",
    "package.json",
    "dist"
  ],
  "nyc": {
    "include": [
      "ts/src/**/*.ts",
      "ts/src/main.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "all": true,
    "cache": false,
    "sourceMap": true,
    "instrument": true
  },
  "keywords": [],
  "dependencies": {
    "commander": "^2.9.0",
    "ejs": "^2.5.6",
    "glob": "^7.0.5",
    "marked": "^0.3.6",
    "node-static": "^0.7.9",
    "opn": "^5.1.0"
  },
  "devDependencies": {
    "@types/assert": "0.0.31",
    "@types/marked": "0.0.28",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.29",
    "assert": "^1.4.1",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.1",
    "espower-typescript": "^8.0.0",
    "mocha": "^3.4.2",
    "mock-fs": "^4.4.1",
    "nyc": "^11.0.2",
    "rimraf": "^2.6.1",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "typedoc": "^0.7.1",
    "typescript": "^2.3.4"
  }
}
