{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "ts/src/*",
        "ts/typings/*",
        "js/lib/*"
      ]
    },
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "strictNullChecks": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
