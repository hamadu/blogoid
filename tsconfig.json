{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": false,
    "baseUrl": ".",
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "types": ["node", "mocha", "assert"],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
